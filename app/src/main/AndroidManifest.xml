<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.application.nueropro">

    <!-- Bluetooth Permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" android:permissionGroup="android.permission-group.LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />



    <!-- Location Permissions (needed for device discovery) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="NeuroPro"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.NeuroPro">

        <activity android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NeuroPro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
